<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/nav.ejs') %>

<main class="container py-5">
    <h1 class="text-center mb-4">Resolve Broken Enrollment</h1>

    <div class="alert alert-warning">
        <p>Student: <%= student.user.firstName %> <%= student.user.lastName %></p>
        <p>Email: <%= student.user.email %></p>
        <p>Broken Course Enrollment: <em>Unknown Course</em></p>
    </div>

    <form action="/faculty/enrollment/resolve/<%= student._id %>/<%= enrollmentId %>" method="POST">
        <p>Are you sure you want to resolve this broken enrollment?</p>
        <button type="submit" class="btn btn-danger">Resolve Enrollment</button>
        <a href="/faculty/students" class="btn btn-secondary">Cancel</a>
    </form>
</main>

<%- include('../partials/footer.ejs') %>
</body>
</html>
