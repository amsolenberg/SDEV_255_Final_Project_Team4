<html lang="en">
  <%- include('./partials/head.ejs') %>
  <style>
    body {
      background-color: #121212;
      color: #fff;
    }
  </style>
  <body>
    <%- include('./partials/nav.ejs') %>

    <main
      class="container d-flex justify-content-center align-items-center"
      style="min-height: 80vh; max-width: 80%"
    >
      <div class="card shadow p-4 bg-dark" style="width: 100%">
        <h2 class="card-title text-center fw-bold mb-4">Available Courses</h2>

        <div class="table-responsive">
          <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th scope="col">Course Name</th>
                <th scope="col">Code</th>
                <th scope="col">Description</th>
                <th scope="col">Credits</th>
              </tr>
            </thead>
            <tbody>
              <% if (error) { %>
              <tr>
                <td colspan="4" class="text-center"><%= error %></td>
              </tr>
              <% } else if (courses.length === 0) { %>
              <tr>
                <td colspan="4" class="text-center">
                  No courses available at the moment.
                </td>
              </tr>
              <% } else { %> <% courses.forEach(course => { %>
              <tr>
                <th scope="row"><%= course.name %></th>
                <td><%= course.code %></td>
                <td><%= course.description %></td>
                <td><%= course.credits %></td>
              </tr>
              <% }) %> <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
